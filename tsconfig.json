{
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "noUnusedParameters": true,
    "paths": {
    "@/*": [
      "src/*"
    ],
    "pages/*": [
      "src/pages/*"
    ],
    "shared/*": [
      "src/shared/*"
    ],
    "features/*": [
      "src/features/*"
    ],
  }
  },
  "include": [
    "src/**/*.js",
    "src/**/*.ts",
    "src/**/*.jsx"
  ]
}